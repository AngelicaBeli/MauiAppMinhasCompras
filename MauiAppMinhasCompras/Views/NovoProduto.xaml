<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.NovoProduto"
             Title="NovoProduto">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked_1"/>
        
    </ContentPage.ToolbarItems>
    
    <VerticalStackLayout Spacing="10" Padding="10">

        <Label Text="Descricao do Produto:"/>
        <Entry x:Name="txt_descricao"/>
        
        <Label Text="Quantidade:"/>
        <Entry x:Name="txt_quantidade" Keyboard="Numeric"/>

        <Label Text="Preco Unitario:"/>
        <Entry x:Name="txt_preco" Keyboard="Numeric"/>

        <Label Text="Categoria:"/>
        <Entry x:Name="txt_categoria"/>

    </VerticalStackLayout>
</ContentPage>